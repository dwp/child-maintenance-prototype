{% extends "layout.html" %}
{% from "button/macro.njk" import govukButton %}
{% from "radios/macro.njk" import govukRadios %}

{% set serviceUrl = "/alpha-prototype-1" %}

{% block pageTitle %}
  {{ serviceName }} - Is Child Benefit paid for the children?
{% endblock %}

{% block beforeContent %}
    {{ 
        govukPhaseBanner({
            tag: {
                text: "PROTOTYPE"
            },
            html: ''
        }) 
    }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post" action="is-child-benefit-paid-for-the-children">

        {{ 
            govukRadios({
                idPrefix: "child-benefit",
                name: "child-benefit",
                fieldset: {
                    legend: {
                        text: "Is Child Benefit paid for the children?",
                        isPageHeading: true,
                        classes: "govuk-fieldset__legend--xl"
                    }
                },
                items: [
                    {
                    value: "yes",
                    text: "Yes",
                    checked: true if data['child-benefit'] == "yes"
                    },
                    {
                    value: "no",
                    text: "No",
                    checked: true if data['child-benefit'] == "no"
                    },
                    {
                    value: "unknown",
                    text: "Don't know",
                    checked: true if data['child-benefit'] == "unknown"
                    }
                ]
        }) 
    }}

        {{ 
            govukButton({
                text: "Continue"
            }) 
        }}
        </form>
    </div>
  </div>
{% endblock %}

